# ==============================================================================
# POSIX Hardening - Sudoers Configuration
# ==============================================================================
# Generated by Ansible on {{ ansible_date_time.iso8601 }}
# Host: {{ inventory_hostname }}
#
# This file grants passwordless sudo to POSIX hardening users
# ==============================================================================

{% for user in posix_hardening_users_list %}
# Allow {{ user }} to use sudo without password
{{ user }} ALL=(ALL) NOPASSWD: ALL
{% endfor %}

# Disable requiretty to allow automation
Defaults !requiretty
